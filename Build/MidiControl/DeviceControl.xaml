<UserControl x:Class="MidiControl.DeviceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MidiControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="700" Width="1260">
    <UserControl.Resources>
        <!-- Text box style -->
        <Style x:Key="PaddedTextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Roboto Light"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="#FF3B5159"/>
            <Setter Property="Foreground" Value="#FFEFEFEF"/>
            <Setter Property="BorderBrush" Value="#FFEFEFEF"/>
            <Setter Property="AcceptsReturn" Value="False"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Padding" Value="5,0,5,0"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <TextBox x:Name="textboxChannel" Style="{StaticResource PaddedTextBox}" HorizontalAlignment="Right" VerticalAlignment="Top" Width="35" Height="25" MaxLength="1" HorizontalContentAlignment="Center" PreviewTextInput="TextBoxNumber_PreviewTextInput" Background="#FF3B5159" Text="2" Foreground="#7FEFEFEF"/>
    </Grid>
</UserControl>
