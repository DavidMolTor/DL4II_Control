<UserControl x:Class="MidiControl.RotaryKnob"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MidiControl"
             mc:Ignorable="d" 
             d:DesignHeight="104" d:DesignWidth="104" Width="104" Height="104">
    <Grid x:Name="gridKnob" RenderTransformOrigin="0.5,0.5" MouseDown="Knob_MouseDown" MouseMove="Knob_MouseMove" MouseUp="Knob_MouseUp" MouseWheel="Knob_MouseWheel">
        <Grid.RenderTransform>
            <RotateTransform x:Name="transformKnob" Angle="0"/>
        </Grid.RenderTransform>
        <Image x:Name="imageKnob" Source="/Resources/DL4 MkII Knob.png" Height="104" Width="104" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0"/>
    </Grid>
</UserControl>
