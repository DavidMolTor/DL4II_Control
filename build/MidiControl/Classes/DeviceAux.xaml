<UserControl x:Class="MidiControl.DeviceAux"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MidiControl"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="310" Height="700" Width="310">
    <Grid Height="700" Width="310" VerticalAlignment="Center" HorizontalAlignment="Right">
        
        <Image Source="/Resources/DL4MkII Addon.png" Height="700" Width="310"/>

        <Label Content="CHANNEL" HorizontalAlignment="Center" Margin="0,0,100,265" VerticalAlignment="Center" Width="160" Foreground="#FF41A25F" HorizontalContentAlignment="Center" FontFamily="Bahnschrift SemiBold Condensed" FontSize="20"/>
        <Label Content="PRESET" HorizontalAlignment="Center" Margin="100,0,0,265" VerticalAlignment="Center" Width="160" Foreground="#FF41A25F" HorizontalContentAlignment="Center" FontFamily="Bahnschrift SemiBold Condensed" FontSize="20"/>

        <Label Content="TWEAK" HorizontalAlignment="Center" Margin="0,0,100,115" VerticalAlignment="Center" Width="160" Foreground="#FFCCCCCC" HorizontalContentAlignment="Center" FontFamily="Bahnschrift SemiBold Condensed" FontSize="20"/>
        <Label Content="TWEEZ" HorizontalAlignment="Center" Margin="100,0,0,115" VerticalAlignment="Center" Width="160" Foreground="#FFCCCCCC" HorizontalContentAlignment="Center" FontFamily="Bahnschrift SemiBold Condensed" FontSize="20"/>

        <Label Content="TWEAK" HorizontalAlignment="Center" Margin="0,48,100,0" VerticalAlignment="Center" Width="160" Foreground="#FFD97600" HorizontalContentAlignment="Center" FontFamily="Bahnschrift SemiBold Condensed" FontSize="20"/>
        <Label Content="ROUTING" HorizontalAlignment="Center" Margin="100,48,0,0" VerticalAlignment="Center" Width="160" Foreground="#FFD97600" HorizontalContentAlignment="Center" FontFamily="Bahnschrift SemiBold Condensed" FontSize="20"/>

        <Label Content="MIDI ERROR" HorizontalAlignment="Center" Margin="0,206,0,0" VerticalAlignment="Center" Width="160" Foreground="#FF41A25F" HorizontalContentAlignment="Center" FontFamily="Bahnschrift SemiBold Condensed" FontSize="20"/>

        <TextBlock x:Name="textInfo" VerticalAlignment="Top" HorizontalAlignment="Left" TextAlignment="Left" TextWrapping="WrapWithOverflow" FontFamily="Bahnschrift SemiBold Condensed" FontSize="17" Width="180" Height="80" Margin="45,60,0,0" Visibility="Hidden">
            Developed by David Molina Toro<LineBreak/>
            GNU General Public License<LineBreak/>
            This software uses Leslie Sanford's MIDI Toolkit
        </TextBlock>

        <Button x:Name="buttonInfo" VerticalAlignment="Top" HorizontalAlignment="Right" Opacity="0" Width="38" Height="38" Margin="0,103,45,0" Click="ButtonInfo_Click" MouseEnter="ButtonInfo_MouseEnter" MouseLeave="ButtonInfo_MouseLeave"/>

    </Grid>
</UserControl>
